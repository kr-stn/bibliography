file = {:C$\backslash$:/Users/Kersten/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Wang et al. - 2009 - Characterizing L-band scattering of paddy rice in southeast china with radiative transfer model and multitemporal A.pdf:pdf},
isbn = {0196-2892},
issn = {01962892},
journal = {IEEE Transactions on Geoscience and Remote Sensing},
keywords = {Paddy rice,Phased-Array-Type L-band Synthetic Aperture Radar,Radiative transfer model},
number = {4},
pages = {988--998},
title = {{Characterizing L-band scattering of paddy rice in southeast china with radiative transfer model and multitemporal ALOS/PALSAR imagery}},
volume = {47},
