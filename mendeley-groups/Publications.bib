mendeley-tags = {good,review,rice},
month = {sep},
pages = {214--227},
publisher = {International Society for Photogrammetry and Remote Sensing, Inc. (ISPRS)},
title = {{Evolution of regional to global paddy rice mapping methods: A review}},
